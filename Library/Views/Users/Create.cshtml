@model Library.ViewModels.UserViewModel
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Role" />
    </div>
    @{
        if (Model.Role == "reader")
        {
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label><br />
                <input asp-for="FirstName" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label"></label><br />
                <input asp-for="SecondName" />
                <span asp-validation-for="SecondName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label"></label><br />
                <input asp-for="Phone" />
                <span asp-validation-for="Phone"></span>
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label"></label><br />
                <input asp-for="City" />
                <span asp-validation-for="City"></span>
            </div>
            <div class="form-group">
                <label asp-for="Street" class="control-label"></label><br />
                <input asp-for="Street" />
                <span asp-validation-for="Street"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hous" class="control-label"></label><br />
                <input asp-for="Hous" />
                <span asp-validation-for="Hous"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label><br />
                <input asp-for="UserName" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" />
                <span asp-validation-for="Password"></span>
            </div>
        }
        else
        {
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input type="text" asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecondName" class="control-label"></label>
                <input type="text" asp-for="SecondName" class="form-control" />
                <span asp-validation-for="SecondName"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input type="text" asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password"></span>
            </div>
        }

    }
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
</form>